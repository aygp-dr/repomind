# RepoMind Environment Configuration
# Copy this file to .env and customize as needed

# ================================================
# Core Application Settings
# ================================================

# Debug level (debug, info, warn, error)
LOG_LEVEL=info

# Application environment (development, staging, production)
NODE_ENV=development
REPOMIND_ENV=development

# ================================================
# GitHub API Configuration
# ================================================

# GitHub personal access token (required for API access)
# Generate at: https://github.com/settings/tokens
GITHUB_TOKEN=

# GitHub API base URL (change for GitHub Enterprise)
GITHUB_API_URL=https://api.github.com

# GitHub API version
GITHUB_API_VERSION=2022-11-28

# Rate limiting settings
GITHUB_API_RATE_LIMIT=5000
GITHUB_API_RATE_WINDOW=3600

# ================================================
# Ollama LLM Configuration
# ================================================

# Ollama server URL
OLLAMA_BASE_URL=http://localhost:11434

# Default model to use
OLLAMA_MODEL=llama3.2:3b

# Model parameters
OLLAMA_TEMPERATURE=0.7
OLLAMA_MAX_TOKENS=4096
OLLAMA_CONTEXT_WINDOW=8192

# Request timeouts (in seconds)
OLLAMA_TIMEOUT=30
OLLAMA_CONNECT_TIMEOUT=10

# ================================================
# Database Configuration
# ================================================

# SQLite database path
SQLITE_DB_PATH=./data/repomind.db

# PostgreSQL connection (if using PostgreSQL)
# DATABASE_URL=postgresql://user:password@localhost:5432/repomind

# Redis connection (for caching)
# REDIS_URL=redis://localhost:6379

# ================================================
# Caching Configuration
# ================================================

# Cache TTL in seconds
CACHE_TTL=3600

# Cache size limits
CACHE_MAX_SIZE=1000
CACHE_LRU_SIZE=500

# Enable/disable caching
CACHE_ENABLED=true

# ================================================
# Telemetry and Monitoring
# ================================================

# OpenTelemetry settings
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=repomind
OTEL_RESOURCE_ATTRIBUTES=service.version=0.1.0

# Metrics collection
METRICS_ENABLED=true
METRICS_PORT=9090

# ================================================
# Development Tools
# ================================================

# Guile REPL configuration
GUILE_REPL_PORT=37146
GUILE_REPL_HOST=localhost

# Enable debug output
DEBUG=false

# Experiment mode
EXPERIMENT_MODE=true

# ================================================
# Security Settings
# ================================================

# Enable rate limiting
RATE_LIMITING_ENABLED=true

# Request rate limits (requests per minute)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Enable request validation
REQUEST_VALIDATION_ENABLED=true

# ================================================
# File System Paths
# ================================================

# Data directory
DATA_DIR=./data

# Cache directory
CACHE_DIR=./data/cache

# Logs directory
LOGS_DIR=./data/logs

# Temp directory
TEMP_DIR=/tmp/repomind

# ================================================
# Experimental Features
# ================================================

# Enable specific experiments (comma-separated list)
ENABLED_EXPERIMENTS=caching,rate-limiting,telemetry

# Feature flags
FEATURE_WEB_UI=false
FEATURE_ASYNC_PROCESSING=true
FEATURE_DISTRIBUTED_CACHE=false

# ================================================
# Third-party Integrations
# ================================================

# Slack webhook for notifications (optional)
# SLACK_WEBHOOK_URL=

# Email configuration (optional)
# SMTP_HOST=
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASS=

# ================================================
# Performance Tuning
# ================================================

# Worker thread pool size
WORKER_THREADS=4

# HTTP client timeouts
HTTP_TIMEOUT=30
HTTP_CONNECT_TIMEOUT=10

# Concurrent request limits
MAX_CONCURRENT_REQUESTS=10

# Memory limits (in MB)
MAX_MEMORY_USAGE=512